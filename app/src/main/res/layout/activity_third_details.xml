<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
    android:id="@+id/activity_third_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fadingEdge="vertical"
   >
<LinearLayout
    tools:context="com.qf.meilihui.avtivity.ThirdDetailsActivity"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="500dp">
    <android.support.v4.view.ViewPager
        android:background="@color/white"
        android:id="@+id/third_details_viewpage"
        android:layout_width="match_parent"
        android:layout_height="500dp"></android.support.v4.view.ViewPager>
    <RadioGroup
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/viewPager_rg"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:button="@null"
        android:gravity="center"
        android:orientation="horizontal">
    </RadioGroup>
</RelativeLayout>

    <TextView
        android:id="@+id/thirddetails_brandname"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Chiara Ferragni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/thirddetails_name"
        android:text="银色亮片织物眼睛图案双肩包"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >
        <TextView
            android:textSize="18sp"
            android:textColor="@color/red"
            android:id="@+id/thirddetails_price"
            android:text="￥1950"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/thirddetails_discount"
            android:layout_alignParentRight="true"
            android:text="5折"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>

        <TextView
            android:background="@mipmap/line_number"
            android:textSize="15sp"
            android:id="@+id/thirddetails_marketPrice"
            android:text="￥3900"
            android:layout_toRightOf="@+id/thirddetails_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时抢购 活动剩余"/>
        <TextView
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:id="@+id/thirddetails_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06天01:24:44"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Discount_picture"
                android:textSize="12sp"
                android:background="@mipmap/icon_coupon_bg"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免  运"/>

        </LinearLayout>

        <TextView
            android:text="免运费"
            android:id="@+id/Discount_details"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/Discount"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:id="@+id/third_tv"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="共1条"/>

            <ImageView
                android:layout_toRightOf="@+id/third_tv"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/filter_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="产品信息"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/thirddetails_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"/>
    </LinearLayout>
    <ListView
        android:divider="@null"
        android:id="@+id/thirddetails_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="尺寸信息"/>
        <TextView
            android:text="单位：CM"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/third_details_ruler"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <ImageView
                android:gravity="center_vertical"
                android:id="@+id/ruler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_ruler"/>
            <TextView
                android:layout_toRightOf="@+id/ruler"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:id="@+id/third_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="尺码指南"/>

            <ImageView
                android:id="@+id/thirddetails_guide"
                android:layout_toRightOf="@+id/third_size"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/filter_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/thirddetails_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <TextView
        android:text="产品图片"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />
    <ListView
        android:divider="@null"
        android:id="@+id/thirddetails_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <TextView
        android:text="图片及相关信息仅供参考，因拍摄灯光及不同显示器色差等问题可能造成商品及图片与实物的色差，一切以实物为准。"
        android:layout_width="match_parent"
        android:textSize="10sp"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/thirddetails_Prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="成分与材质"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/thirddetails_component_iv"
        android:layout_width="match_parent"
        android:src="@mipmap/bg_event"
        android:layout_height="120dp" />
    <LinearLayout
        android:padding="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="材质"/>
        <TextView
            android:textSize="13sp"
            android:layout_weight="7"
            android:id="@+id/thirddetails_component_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="棉"/>
    </LinearLayout>

    <TextView
        android:text="洗护与保养"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/thirddetails_maintain"
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="100%官方正品保证"/>
        <ImageView
            android:onClick="onClick"
            android:id="@+id/thirddetails_ensure"
            android:layout_alignParentRight="true"
            android:src="@mipmap/filter_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="品牌"/>
        <TextView
            android:paddingRight="10dp"
            android:text="进入品牌首页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/thirddetails_in"/>
        <ImageView
            android:onClick="onClick"
            android:id="@+id/thirddetails_in"
            android:layout_alignParentRight="true"
            android:src="@mipmap/filter_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="用户评价"/>
        <TextView
            android:paddingRight="10dp"
            android:text="更多该品牌评价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/thirddetails_evaluate"/>
        <ImageView
            android:onClick="onClick"
            android:id="@+id/thirddetails_evaluate"
            android:layout_alignParentRight="true"
            android:src="@mipmap/filter_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/thirddetails_evaluate_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/head_line"
        android:layout_below="@+id/viewpager_bea"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分类"/>
        <View
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="2dp"/>

    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/my_Recommend"
    android:layout_width="match_parent"
    android:layout_height="250dp">

</android.support.v7.widget.RecyclerView>
  </LinearLayout>
</ScrollView>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:onClick="onClick"
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_brandname"
                android:text="品牌"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_price"
                    android:text="￥708"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/title_marketPrice"
                    android:background="@mipmap/line_number"
                    android:textSize="12sp"
                    android:text="￥2890"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/title_bar_products"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_share1"/>
    </RelativeLayout>
</FrameLayout>