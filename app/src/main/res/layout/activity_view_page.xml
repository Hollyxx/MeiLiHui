<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qf.meilihui.avtivity.ViewPagerActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerActivity_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/viewPagerActivity_rg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/viewPagerActivity_id"
        android:button="@null"
        android:gravity="center"
        android:orientation="horizontal"></RadioGroup>
</RelativeLayout>
