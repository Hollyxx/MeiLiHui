<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <ImageView
            android:id="@+id/image_item_grid_products_category"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/buyer_recommend_item_grid_products_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/icon_buyer_recommand"/>

        <TextView
            android:id="@+id/only_one_item_grid_products_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_brand_black_tag"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:textColor="#fff"
            android:textSize="10sp"
            android:padding="2dp"
            android:gravity="center"
            android:text="仅剩一件"
            android:layout_below="@id/buyer_recommend_item_grid_products_category"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/brand_item_grid_products_category"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="VINCE CAMUTO"
        />
    <TextView
        android:id="@+id/summary_item_grid_products_category"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:text="黑色花边漏肩长袖上衣"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_item_grid_products_category"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:textColor="#f00"
            android:textStyle="bold"
            android:text="¥399"/>

        <TextView
            android:id="@+id/price_origin_item_grid_products_category"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="center"
            android:background="@mipmap/line_number"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:text="¥400.3"/>
    </LinearLayout>
</LinearLayout>