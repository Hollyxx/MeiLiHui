<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/today_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_event"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:backgroundTint="@color/white"
        android:background="@mipmap/box_remind_middle_w"
        android:layout_marginTop="207dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
       >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/today_text1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="TRUSSARDI"/>
            <TextView
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/today_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="女士奢华私人衣柜"/>
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/today_text4"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="1.8"/>
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/today_text4"
                    android:id="@+id/today_text3"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="折起"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginTop="37dp"
                android:id="@+id/home_new_item"
                android:textColor="@color/black"
                android:background="@mipmap/icon_btn_block"
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:text="开售提醒"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
