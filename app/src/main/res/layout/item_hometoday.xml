<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/today_image"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:scaleType="fitXY"
    android:src="@mipmap/bg_event"
    />

    <LinearLayout
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@mipmap/box_remind_middle_w"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/today_text1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="TRUSSARDI"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/today_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="女士奢华私人衣柜"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/today_text4"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="1.8"/>
            <TextView
              android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/today_text4"
                android:id="@+id/today_text3"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折起"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
